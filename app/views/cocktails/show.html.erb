<%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>
<br>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> <%= dose.ingredient.name %></p>
  <%= link_to "Delete", dose_path(dose), data: { confirm: 'Are you sure?' }, method: :delete %>
<% end %>

